<h2>Editing Book</h2>
<%= form_with model: @book, url: book_url(@book), local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "show", @book %>
<span> | </span>
